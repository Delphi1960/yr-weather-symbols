{
  "name": "@nrk/yr-weather-symbols",
  "version": "10.0.2",
  "description": "Yr weather symbols",
  "author": "alexander.pope@nrk.no, Simen SÃ¦grov <simen.sagrov@nrk.no>",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist ./temp ./docs && mkdir ./dist ./temp ./docs",
    "build": "npm run clean && npm run build:symbols && npm run build:typescript && npm run build:copy-locales && npm run build:docs",
    "prebuild:symbols": "docker build . -t yr-weather-symbols",
    "build:symbols": "docker run -i --init --rm --cap-add=SYS_ADMIN -v $PWD/temp:/temp -v $PWD/dist:/dist yr-weather-symbols",
    "build:typescript": "tsc",
    "build:copy-locales": "cpy locales/* dist/locales",
    "build:docs": "npm run build:docs:build && npm run build:docs:copy-symbols && npm run build:docs:zip-symbols",
    "build:docs:build": "tsc --resolveJsonModule bin/buildDocs.ts && node bin/buildDocs.js",
    "build:docs:copy-symbols": "cpy dist/light-mode/default/svg docs/symbols/light-mode/default && cpy dist/light-mode/shadows/svg docs/symbols/light-mode/shadows",
    "build:docs:zip-symbols": "zip -r docs/light-mode.zip dist/light-mode",
    "prepublishOnly": "npm run build",
    "publish:docs": "gh-pages --dist docs"
  },
  "repository": "https://github.com/nrkno/yr-weather-symbols/",
  "license": "MIT",
  "devDependencies": {
    "@types/puppeteer": "^2.0.0",
    "@types/svgo": "^1.3.0",
    "cpy-cli": "^3.1.1",
    "fast-xml-parser": "^3.16.0",
    "gh-pages": "^3.1.0",
    "puppeteer": "^2.1.1",
    "rimraf": "^3.0.2",
    "svgo": "^1.3.2",
    "typescript": "^4.2.3"
  },
  "files": [
    "dist"
  ]
}
