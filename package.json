{
  "name": "@nrk/yr-weather-symbols",
  "version": "8.0.1",
  "description": "Yr weather symbols",
  "author": "alexander.pope@nrk.no, Simen SÃ¦grov <simen.sagrov@nrk.no>",
  "dependencies": {
    "@nrk/yr-convert-graphics": "0.0.12"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && npm run convert",
    "build-docs": "webpack && rimraf docs/*.css",
    "build-locales": "cpy locales/* dist/locales",
    "clean": "rimraf dist/* temp/*",
    "preconvert": "docker build --build-arg SRC_FOLDER=symbols --build-arg SCRIPT_FOLDER=bin --build-arg NPM_TOKEN=${NPM_TOKEN} --tag yr-weather-symbols-1 .",
    "convert": "docker run -v $PWD/dist:/dist -v $PWD/temp:/temp  --cap-add=SYS_ADMIN --rm yr-weather-symbols-1",
    "generate": "node bin/generate src",
    "lint": "prettier --list-different \"src/**/*.{js,css,ts,tsx}\"",
    "prepublishOnly": "npm run lint && npm run build",
    "watch": "NODE_ENV=development webpack-dev-server"
  },
  "repository": "https://github.com/nrkno/yr-weather-symbols/",
  "license": "MIT",
  "devDependencies": {
    "rimraf": "^3.0.2"
  }
}
